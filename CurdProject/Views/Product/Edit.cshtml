@using CurdProject.Models.Entity
@model Product

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-4 mt-5 bg-light rounded">
       
        <h5 class="text-center text-success"> Create Product</h5>
        <form   id="form-box" class="p-2" asp-controller="Product"   asp-action="Edit" method="post" >
          
          <div class="form-group input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-envelope"></i></span>
            </div>
            <input class="form-control" placeholder="Enter your NameProduct" required asp-for="Name">
          </div>
          <div class="form-group input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-at"></i></span>
            </div>
            <input  asp-for="Count" class="form-control" placeholder="Enter CountProduct" required>
          </div>
          <div class="form-group input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-comment-alt"></i></span>
            </div>
            <textarea asp-for="Price" class="form-control" placeholder="Write PriceProduct" cols="30" rows="4" required></textarea>
          </div>
          <div class="form-group">
            <input type="submit" name="submit" id="submit" class="btn btn-primary btn-block" value="Send">
          </div>
        </form>
      </div>
    </div>
  </div>

