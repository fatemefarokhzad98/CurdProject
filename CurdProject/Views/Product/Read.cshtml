@using CurdProject.Models.Entity

@model List<Product>
    
   
    	<div class="container">
    	<div class="title">
    		<h3>Products List</h3>
            <a   class="btn btn-success btn-just-icon btn-sm"  asp-action="Insert" asp-controller="Product" >Create
               

            </a>

    	</div>
        
    	<div class="row">
           
            <div class="col-lg-8 col-md-10 ml-auto mr-auto">
    	
        <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th class="text-center">#</th>
                            <th>Name</th>
                            
                            <th>Count</th>
                            <th class="text-right">Salary</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                      @foreach(var item in Model){
                      
                    <tbody>
                        <tr>
                            <td class="text-center">@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Count</td>
                          
                            <td class="text-right">€ @item.Price</td>
                       
                            <td class="td-actions text-center">
                                
                                <a   class="btn btn-info btn-just-icon btn-sm" asp-controller="Product"  asp-action="Edit" asp-route-Id=@item.Id>
                                    edit
                                </a>
                                <a  class="btn btn-danger btn-just-icon btn-sm"  asp-controller="Product" asp-action="Delete" asp-route-Id=@item.Id>
                                   Delete
                                </a>
                            </td>
                        </tr>
                          </tbody>} 
                </table>
               </div>
               </div>
               </div>

               </div>

        